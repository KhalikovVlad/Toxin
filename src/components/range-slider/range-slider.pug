mixin slider(slider, lang='ru')
    -
        const {
            label,
            range,
            name,
            initValue,
            step,
            margin 
        } = slider;

    .slider.js-slider
        label.slider__label
            span #{label}
            input.slider__input.js-slider__input(
                name = name
                type = 'text' 
                tabindex = '-1' 
                readonly
            )
        .slider__range.js-slider__range(
            data-range = range 
            data-init-value = initValue 
            data-step = step
            data-margin = margin
            data-lang = lang
        )